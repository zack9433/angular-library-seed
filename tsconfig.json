{
  "compilerOptions": {
    "alwaysStrict": true,
    "importHelpers": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "rootDir": ".",
    "inlineSources": true,
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es5",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": [
      "jasmine",
      "node"
    ],
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "setupJest.ts",
    "jestGlobalMocks.ts"
  ]
}