{
  "name": "angular-library-seed",
  "version": "1.0.0",
  "description": "Build angular library development, test and release enviroment",
  "main": "index.js",
  "author": "zackyang",
  "license": "MIT",
  "keywords": [
    "angular",
    "angular2",
    "angular 2",
    "angular4",
    "angular 4",
    "starter",
    "library",
    "seed",
    "module",
    "angular module"
  ],
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.ts",
    "globals": {
      "__TS_CONFIG__": "./tsconfig.spec.json",
      "__TRANSFORM_HTML__": true
    },
    "collectCoverageFrom": [
      "src/*.component.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  },
  "scripts": {
    "backup": "cpy --rename=library.component.ts.bak src/library.component.ts src/",
    "restore": "mv src/library.component.ts.bak src/library.component.ts",
    "inline": "npm run backup && ng2-inline -o src/ -f -b src/ src/*.component.ts",
    "commitmsg": "validate-commit-msg",
    "commit": "git-cz",
    "lint": "tslint -p tsconfig.json --type-check ./src/**/*.ts",
    "precommit": "opt --in precommit --exec 'npm run validate'",
    "validate": "npm run lint && npm t",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand --coverage",
    "clean": "rimraf dist",
    "bundling": "rollup -c",
    "minify": "uglifyjs dist/library.module.bundle.js --screw-ie8 --compress --mangle --comments --output dist/library.module.bundle.min.js",
    "copy": "cpy LICENSE dist",
    "build": "npm run clean && npm run inline && ngc -p tsconfig.build.json && npm run bundling && npm run minify && npm run copy && npm run restore",
    "build:demo": "./build-demo",
    "demo": "http-server ./demo",
    "semantic-release": "semantic-release pre && npm publish  && semantic-release post"
  },
  "peerDependencies": {
    "@angular/core": ">=4.0.0"
  },
  "devDependencies": {
    "@angular/common": "^4.0.2",
    "@angular/compiler": "^4.0.2",
    "@angular/compiler-cli": "^4.0.2",
    "@angular/core": "^4.0.2",
    "@angular/platform-browser": "^4.0.2",
    "@angular/platform-browser-dynamic": "^4.0.2",
    "@types/jasmine": "^2.5.47",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.12",
    "angular2-inline-template-style": "^1.0.2",
    "chokidar": "^1.6.1",
    "codecov.io": "^0.1.6",
    "codelyzer": "3.0.0-beta.4",
    "commitizen": "^2.9.6",
    "core-js": "^2.4.1",
    "cpy-cli": "^1.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "jest-preset-angular": "^1.0.0",
    "opt-cli": "^1.5.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rxjs": "^5.3.0",
    "systemjs": "0.19.28",
    "ts-helpers": "^1.1.2",
    "tslib": "^1.6.0",
    "tslint": "4.5.1",
    "typescript": "^2.2.2",
    "uglify-js": "^2.8.22",
    "validate-commit-msg": "^2.12.1",
    "zone.js": "^0.8.5"
  }
}